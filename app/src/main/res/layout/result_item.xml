<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#E7EFFB"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:padding="5dp"
        android:textDirection="locale">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="@string/result_question"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtQuestionResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="Question"
            android:textColor="#000000"
            android:textDirection="locale"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inearUserAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:padding="5dp"
        android:textDirection="locale">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="@string/result_yourAnswer"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUserAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="Your answer:"
            android:textDirection="locale"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearApiResponse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:padding="5dp"
        android:textDirection="locale"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="@string/result_returned"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtApiOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="what is returned"
            android:textDirection="locale"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCorrectAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:padding="5dp"
        android:textDirection="locale"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="@string/result_correctAnswer"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="2dp"
            android:text="Correct answer:"
            android:textDirection="locale"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
